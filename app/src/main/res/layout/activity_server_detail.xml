<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chiriacd.datafetch.ServerDetailActivity">
    <EditText
        android:layout_margin="20dp"
        android:hint="@string/hint_server_view"
        android:lines="1"
        android:id="@+id/server_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="@string/hint_port_view"
        android:layout_margin="20dp"
        android:id="@+id/server_port"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/update_server_button"
        android:text="@string/button_update_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
